  </teiHeader>
  <text>
    <body>
      <schemaSpec ident="simple_sources" defaultExceptions="http://www.tei-c.org/ns/1.0" prefix="tei_" targetLang="en" docLang="en">

        <moduleRef key="tei"/>
        <moduleRef key="core"/>
        <moduleRef key="header"/>
        <moduleRef key="textstructure"/>
        <moduleRef key="corpus"/>
        <moduleRef key="msdescription"/>
        <moduleRef key="namesdates"/>
        <moduleRef key="transcr"/>
        <moduleRef key="analysis"/>
        <moduleRef key="textcrit"/>
        <moduleRef key="certainty"/>
        <moduleRef key="figures"/>
        <moduleRef key="gaiji"/>
        <moduleRef key="linking"/>
        <moduleRef key="iso-fs"/>

        <elementSpec ident="hi" mode="change">
          <attList>
            <attDef ident="rend" mode="change">
              <valList type="semi" mode="change">
                <valItem ident="sup"/>
                <valItem ident="sub"/>
                <valItem ident="italic"/>
                <valItem ident="underline"/>
                <valItem ident="center"/>
                <valItem ident="sc"/>
                <valItem ident="grid"/>
                <valItem ident="large"/>
                <valItem ident="rev"/>
                <valItem ident="flip"/>
                <valItem ident="turnover"/>
                <valItem ident="turnunder"/>
              </valList>
            </attDef>
          </attList>
        </elementSpec>

        <classSpec ident="att.datcat" type="atts" mode="delete"/>

      </schemaSpec>
    </body>
  </text>
</TEI>
